<div id="like_<%= @post.id %>">
  <% if current_user.likes?(@post) %>
    <%= link_to "Unlike", like_path(@post.likes.find_by(user_id: current_user)), method: :delete, remote: true %>
  <% else %>
    <%= link_to "Like", likes_path(like: { likeable_id: @post.id, likeable_type: 'Post' }), method: :post, remote: true %>
  <% end %>
</div>