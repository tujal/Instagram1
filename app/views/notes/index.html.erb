<%= render "/home/nav" %>
<div class="container mt-3">
    <div class='float-end'>
        <%= link_to "Create Notes",   new_user_note_path(current_user), class:"btn btn-primary btn-sm" %>
    </div>
    <% @notes.each do |note| %>
        <div class="container w-25 bg-white child_box mb-3 ">
            <div>
                <%= image_tag(note.user.profile_image , size:"40x40",class:"rounded-circle") if note.user.profile_image.attached? %>&nbsp; <b><%= link_to note.user.user_name, user_profile_path(note.user) , class:"text-decoration-none text-dark"%></b>  &nbsp;<%=link_to "Delete",  user_note_path(current_user, note) %><br>
                <small class="text-secondary"><%= time_ago_in_words(note.created_at) %>Ago</small>
            </div>
            <%= note.note %>
            <%= render partial: 'home/like', locals: { likable: note} %>
        </div>
    <% end %>
</div>